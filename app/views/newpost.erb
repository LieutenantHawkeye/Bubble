                       <input type="text" name="post_topic" class="form-control" placeholder="What is the topic of this post?">
                       <input type="text" name="post_type" class="form-control" placeholder="What type of post is this?">

              		<span class="input-group-btn">
                		<button class="btn btn-default" type="submit">Post</button>

              		</span>
            	   </div>
				 </form>


			</div>
			<div class="col-md-4"></div>
	   </div>
