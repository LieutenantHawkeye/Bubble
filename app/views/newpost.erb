	 <%= erb :navbar %>

  </head>
  <body>
	  <div class="container">
		<div id="navbar"></div>
		<div class="row">
			<div class="col-md-4"></div>
			<div class="col-md-4">

				<form action="/post/create" method="POST" align="center">
				   <div class="input-group">

              		   <input type="text" name="post_text" class="form-control" placeholder="Enter your message here">
